<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="cam_workshop_list">
      <field name="name">cam_workshop list</field>
      <field name="model">cam.workshop</field>
      <field name="arch" type="xml">
        <tree editable="bottom">
          <field name="name"/>
          <field name="operation_base_id"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="cam_workshop_action_window">
      <field name="name">Talleres</field>
      <field name="res_model">cam.workshop</field>
      <field name="view_mode">tree</field>
    </record>

  </data>
</odoo>